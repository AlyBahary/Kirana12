<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainCategoryActivity">

    <include
        android:id="@+id/app_bar"
        layout="@layout/action_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ScrollView
            android:layout_width="100dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/mainCatgButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:background="@drawable/img_slideerrr3" />

                <Button
                    android:id="@+id/mainCatgButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:background="@drawable/img_slideerrr3" />

                <Button
                    android:id="@+id/mainCatgButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:background="@drawable/img_slideerrr3" />

                <Button
                    android:id="@+id/mainCatgButton4"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:background="@drawable/img_slideerrr3" />

                <Button
                    android:id="@+id/mainCatgButton5"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:background="@drawable/img_slideerrr3" />

                <Button
                    android:id="@+id/mainCatgButton6"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:background="@drawable/img_slideerrr3" />

                <Button
                    android:id="@+id/mainCatgButton7"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:background="@drawable/img_slideerrr3" />

                <Button
                    android:id="@+id/mainCatgButton8"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:background="@drawable/img_slideerrr3" />
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mainCatgName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_chevron_left_black_24dp"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="Categrie Name"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"

                android:textStyle="bold" />

            <ListView
                android:id="@+id/mainCatglist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></ListView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>