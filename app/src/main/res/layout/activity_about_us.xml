<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".NavItemsActivities.AboutUsActivity">

    <include
        android:id="@+id/app_bar"
        layout="@layout/action_bar" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:padding="17dp">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="About Us"
            android:textSize="22sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="Planetl 1 is a team of passionate and talented individuals
who believe in the unique strengths of kiranas. We are' excited to build distinctive solutions that help local kirana stores reconnect with their customers, expand sales opportunities and improve productivity. Through a network
of strong kiranas, we wish to redefine the grocery e-
commerce landscape in India With the unique
combination of the consistency of a modern retailer and
the hyper-local knowledge of the kirana owner, we can
ensure and establish a lifelong relationship with ourcustomers.
"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_marginTop="8dp"
            android:text="Read More"
            android:gravity="right"
            android:textColor="#305907"
            android:textSize="22sp" />
    </LinearLayout>
    </ScrollView>


</LinearLayout>